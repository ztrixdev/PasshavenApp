<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <application
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.PasshavenApp">
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.PasshavenApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.IntroActivity"
            android:exported="true"
            android:label="@string/intro_label"
            android:theme="@style/Theme.PasshavenApp">
        </activity>
        <activity
            android:name=".activities.ViewEntryActivity"
            android:exported="true"
            android:theme="@style/Theme.PasshavenApp">
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true"
            android:label="@string/login_label"
            android:theme="@style/Theme.PasshavenApp">
        </activity>
        <activity
            android:name=".activities.VaultOverviewActivity"
            android:exported="true"
            android:theme="@style/Theme.PasshavenApp">
        </activity>
        <activity
            android:name=".activities.NewEntryActivity"
            android:exported="true"
            android:theme="@style/Theme.PasshavenApp">
        </activity>
        <activity
            android:name=".activities.NewFolderActivity"
            android:exported="true"
            android:theme="@style/Theme.PasshavenApp">
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:exported="true"
            android:theme="@style/Theme.PasshavenApp">
        </activity>
    </application>
</manifest>